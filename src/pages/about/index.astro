---
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import { ABOUT } from "@consts";
import { Image } from "astro:assets";
import me from "../../images/me.jpg";
---

<PageLayout title={ABOUT.TITLE} description={ABOUT.DESCRIPTION}>
  <Container>
    <div class="space-y-10">
      <div class="animate font-semibold text-black dark:text-white">About</div>
      <div class="flex justify-center">
        <Image src={me} alt="" class="animate rounded-full max-w-xs" />
      </div>
      <p class="animate font-semibold text-black dark:text-white">Coming soon...</p>
    </div>
  </Container>
</PageLayout>
