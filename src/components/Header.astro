---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { SITE } from "@consts";
---

<header>
  <Container>
    <div class="flex flex-wrap gap-y-2 justify-between">
      <Link href=`${import.meta.env.BASE_URL}` underline={false}>
        <div class="font-semibold">
          {SITE.NAME}
        </div>
      </Link>
      <nav class="flex gap-1">
        <Link href=`${import.meta.env.BASE_URL}/posts`> posts </Link>
        <span>
          {`/`}
        </span>
        <Link href=`${import.meta.env.BASE_URL}/projects`> projects </Link>
        <span>
          {`/`}
        </span>
        <Link href=`${import.meta.env.BASE_URL}/about`> about </Link>
      </nav>
    </div>
  </Container>
</header>
